<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <DataTemplate x:Key="EnumDataTemplate">
        <Grid x:Name="LayoutRoot" VerticalAlignment="Center" Height="Auto" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="45" />
                <ColumnDefinition />
                <ColumnDefinition Width="5" />
            </Grid.ColumnDefinitions>
            <ContentControl x:Name="IconControl" Grid.Column="0" Style="{Binding Icon}" VerticalAlignment="Center"  />
            <TextBlock x:Name="DescriptionBlock" Width="Auto" Text="{Binding Description}" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Stretch"  />
        </Grid>
    </DataTemplate>

</ResourceDictionary>