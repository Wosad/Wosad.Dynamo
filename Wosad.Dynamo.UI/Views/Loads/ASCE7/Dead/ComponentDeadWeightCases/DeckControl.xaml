<UserControl x:Class="WosadDynamoUI.Views.Loads.ASCE7.DeckControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
   xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="30" d:DesignWidth="700">
    
    <Grid x:Name="LayoutRoot" Height="30">
        <StackPanel Orientation="Horizontal" Height="30">
            <ComboBox Width="80" SelectedIndex="{Binding ComponentOption1}" Margin="15,0,0,0" Height="20">
            	<ComboBoxItem Content="Gage 22" Width="100" Height="20"/>
            	<ComboBoxItem Content="Gage 20"  Width="100" Height="20"/>
            	<ComboBoxItem Content="Gage 18" Width="100" Height="20"/>
            	<ComboBoxItem Content="Gage 16"  Width="100" Height="20"/>
			</ComboBox>
            <TextBlock TextWrapping="Wrap" Text="Deck depth" Margin="15,0,0,0" VerticalAlignment="Center"/>
            <ComboBox Height="20" Width="70" Margin="10,0,0,0" SelectedIndex="{Binding ComponentOption2}">
            	<ComboBoxItem Content="1.5 in."/>
            	<ComboBoxItem Content="2 in."/>
            	<ComboBoxItem Content="3 in."/>
            </ComboBox>

        </StackPanel>
    </Grid>
</UserControl>
