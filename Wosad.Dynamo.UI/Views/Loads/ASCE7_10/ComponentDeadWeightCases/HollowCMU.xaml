<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation" x:Class="Wosad.Dynamo.UI.Views.Loads.ASCE7_10.HollowCMU"
    mc:Ignorable="d"
    d:DesignHeight="30" d:DesignWidth="600">
    
	<Grid x:Name="LayoutRoot" Height="30">

		<StackPanel Orientation="Horizontal" Margin="0">
			<TextBlock TextWrapping="Wrap" Text="Unit nominal size" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,0,0"/>
			<ComboBox Width="80" Height="20" Margin="15,0,0,0" SelectedIndex="{Binding ComponentOption1}">
				<ComboBoxItem Content="6 in." Height="20" Width="70"/>
				<ComboBoxItem Content="8 in." Height="20" Width="70"/>
				<ComboBoxItem Content="10 in." Height="20" Width="70"/>
				<ComboBoxItem Content="12 in." Height="20" Width="70"/>
			</ComboBox>
		</StackPanel>

	</Grid>
</UserControl>
